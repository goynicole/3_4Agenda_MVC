@model Organizer.Models.Appointment
@{
    ViewBag.Title = "AddAppointment";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container" style="padding-top: 5%;">

    <div class="row justify-content-center">
        <div class="col-md-8">
            <h2 class="text-center mb-4 bg-info p-3">Rendez-Vous</h2>
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <div class="form-group">
                    @Html.LabelFor(model => model.DateHour, htmlAttributes: new { @class = "control-label col-md-8" })
                    @Html.EditorFor(model => model.DateHour, new { htmlAttributes = new { @class = "form-control", @id = "DateApp" } })
                    @Html.ValidationMessageFor(model => model.DateHour, "Obligatoire", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.Subject, new { @class = "col-md-8 control-label" })
                    @Html.EditorFor(model => model.Subject, "Objet du rendez-vous?", new { HtmlAttributes = new { @class = "form-control" } })
                    @*@Html.TextArea("myTextArea", "Objet du rendez-vous?", new { @class = "form-control" })*@
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.BrokerID, "Courtier", htmlAttributes: new { @class = "control-label col-md-8" })
                    @Html.DropDownList("BrokerID", null, htmlAttributes: new { @class = "custom-select" })
                    @Html.ValidationMessageFor(model => model.BrokerID, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.CustomerID, "Client", htmlAttributes: new { @class = "control-label col-md-8" })
                    @Html.DropDownList("CustomerID", null, htmlAttributes: new { @class = "custom-select" })
                    @Html.ValidationMessageFor(model => model.CustomerID, "", new { @class = "text-danger" })
                </div>

                <input type="submit" class="btn btn-default btn-outline-primary" name="Enregistrer" />
            }
        </div>
    </div>
</div>

