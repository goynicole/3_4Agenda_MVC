@model Organizer.Models.Appointment
@{
    ViewBag.Title = "Modifier un RDV";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container" style="padding-top: 5%;">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h2 class="text-center mb-4 bg-warning p-3">@ViewBag.Title</h2>
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                @Html.HiddenFor(model => model.AppointmentID)
                <div class="form-group">
                    @Html.LabelFor(model => model.DateHour, htmlAttributes: new { @class = "col-md-10 control-label" })
                    @Html.EditorFor(model => model.DateHour, new { htmlAttributes = new { @class = "form-control", @id = "DateApp" } })
                    @Html.ValidationMessageFor(model => model.DateHour)
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.BrokerID, "Détail du Courtier, BrokerID", htmlAttributes: new { @class = "control-label col-md-10" })
                    @Html.DropDownList("BrokerID", null, htmlAttributes: new { @class = "custom-select" })
                    @Html.ValidationMessageFor(model => model.BrokerID, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.CustomerID, "Détail du Courtier, CustomerID", htmlAttributes: new { @class = "control-label col-md-10" })
                    @Html.DropDownList("CustomerID", null, htmlAttributes: new { @class = "custom-select" })
                    @Html.ValidationMessageFor(model => model.CustomerID, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.Subject, htmlAttributes: new { @class = "col-md-10 control-label" })
                    @Html.EditorFor(model => model.Subject, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Subject)
                </div>
                <input type="submit" value="Modifier" class="btn btn-success" />
            }
        </div>
    </div>
</div>
